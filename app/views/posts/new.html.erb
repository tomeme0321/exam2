<p id="notice"><%= notice %></p>

<%= form_for(@post) do |f| %>
 <% if @post.errors.any? %>
 <div id="error_explanation">
   <h2><%= @post.errors.count %>件のエラーがあります。</h2>
 <% end %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <br>
 <%= f.label :content %>
 <%= f.text_field :content %>
 <br>
 <%= f.submit %>
 <% end %>
 <%= link_to "一覧に戻る", posts_path %>
