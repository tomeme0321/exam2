<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <br>
     <%= form_for(@post) do |f| %>
     <%= f.label :title %>
     <%= f.text_field :title %>
     <br>
     <%= f.label :content %>
     <%= f.text_field :content %>
     <br>
     <%= f.submit '更新する', class: 'btn btn-default btn-sm btn-warning'%>
     <% end %>
     <%= link_to "一覧に戻る", posts_path %>
  </div>
</div>
